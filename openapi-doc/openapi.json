  "paths": {
    "/task": {
      "post": {
        "summary": "Create a saved task",
        "description": "Creates a new task and saves it to the database.",
        "tags": ["Tasks"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "taskName": {
                    "type": "string",
                    "description": "The name of the task."
                  },
                  "taskType": {
                    "type": "integer",
                    "description": "The type of the task (e.g., 1 for FETCH, 2 for MODIFY)."
                  },
                  "taskContent": {
                    "type": "string",
                    "description": "The content of the task."
                  },
                  "taskSteps": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "stepOrder": {
                          "type": "integer",
                          "description": "The order of the step."
                        },
                        "stepType": {
                          "type": "integer",
                          "description": "The type of the step (e.g., 1 for FETCH, 2 for MODIFY)."
                        },
                        "stepContent": {
                          "type": "string",
                          "description": "The content of the step."
                        }
                      }
                    }
                  }
                },
                "required": ["taskName", "taskType", "taskContent", "taskSteps"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "taskId": {
                      "type": "integer",
                      "description": "The ID of the created task."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Token is invalid or expired."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/task/list": {
      "get": {
        "summary": "Get saved tasks",
        "description": "Retrieves all saved tasks for the authenticated user.",
        "tags": ["Tasks"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of saved tasks.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "The ID of the task."
                      },
                      "taskName": {
                        "type": "string",
                        "description": "The name of the task."
                      },
                      "taskType": {
                        "type": "integer",
                        "description": "The type of the task."
                      },
                      "taskContent": {
                        "type": "string",
                        "description": "The content of the task."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The creation timestamp of the task."
                      },
                      "steps": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "stepOrder": {
                              "type": "integer",
                              "description": "The order of the step."
                            },
                            "stepType": {
                              "type": "integer",
                              "description": "The type of the step."
                            },
                            "stepContent": {
                              "type": "string",
                              "description": "The content of the step."
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Token is invalid or expired."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/task/single/{taskId}": {
      "delete": {
        "summary": "Delete a saved task",
        "description": "Marks a saved task as deleted.",
        "tags": ["Tasks"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "required": true,
            "description": "The ID of the task to delete.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task deleted successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Success message."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Token is invalid or expired."
          },
          "404": {
            "description": "Task not found or not authorized to delete."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  }
